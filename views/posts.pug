doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css",
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC",
    crossorigin="anonymous")
    title NNチャット
  body.container
    div.my-3
      a(href="/logout").btn.btn-info.float-end ログアウト
      h1 NNチャット
    form(method="post" action="/posts")
      div.col-12
        textarea(name="content" cols="40" rows="4").form-control
      div.col-12
        button(type="submit").btn.btn-primary 送信

  each post in posts
    - let cardClass = (user === post.postedBy ? 'card my-3 bg-primary text-white' : 'card my-3')
    div(class=cardClass)
      - let isDeletable = (user === post.postedBy || user === 'admin')
      if isDeletable
        div.card-header
          form(method="post" action="/posts/delete")
            input(type="hidden" name="id" value=post.id)
            button(type="submit").btn.btn-danger.float-end 削除
      div.card-body
        b #{post.postedBy}
        small.float-end #{post.createdAt}
        p.card-text!=post.content

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js",
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM",
  crossorigin="anonymous")