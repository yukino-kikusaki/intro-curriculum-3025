doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title NNチャット
  body
    h1 NNチャット
    a(href="/logout") ログアウト
    form(method="post" action="/posts")
      div
        textarea(name="content" cols=40 rows=4)
      div
        button(type="submit") 送信

    h2 投稿一覧
    each post in posts
      p #{post.postedBy}
      p 送信日時: #{post.createdAt}
      p #{post.content}
      - let isDeletable = (user === post.postedBy || user === 'admin')
      if isDeletable
        form(method="post" action="/posts?delete=1")
          input(type="hidden" name="id" value=post.id)
          button(type="submit") 削除
      hr